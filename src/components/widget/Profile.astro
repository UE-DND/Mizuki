---
import { Icon } from "astro-icon/components";
import { getResolvedSiteSettings } from "@/server/site-settings/service";
import { url } from "../../utils/url-utils";
import ImageWrapper from "../misc/ImageWrapper.astro";
import TypewriterText from "../TypewriterText.astro";
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import { SOCIAL_PLATFORM_META } from "../../constants/social-platforms";
import { loadOfficialSidebarProfile } from "../../server/api/v1/public-data";

import type { SidebarProfileData, SocialLink } from "../../types/app";

const resolvedSiteSettings =
	Astro.locals.siteSettings ?? (await getResolvedSiteSettings());
const profileConfig = resolvedSiteSettings.settings.profile;
const umamiConfig = {
	enabled: resolvedSiteSettings.settings.umami.enabled,
	apiKey: import.meta.env.UMAMI_API_KEY || "api_xxxxxxxx",
	baseUrl: resolvedSiteSettings.settings.umami.baseUrl,
	scripts: resolvedSiteSettings.settings.umami.scripts,
};

// 解析 umami
const umamiEnabled = umamiConfig.enabled || false;
const umamiWebsiteId = umamiConfig.scripts.match(/data-website-id="([^"]+)"/)?.[1] || "";
const umamiApiKey = umamiConfig.apiKey || "";
const umamiBaseUrl = umamiConfig.baseUrl || "";

// 动态侧栏数据：优先使用页面设置的 sidebarProfile，否则加载官方账户
let sidebarData: SidebarProfileData;
if (Astro.locals.sidebarProfile) {
    sidebarData = Astro.locals.sidebarProfile;
} else {
    sidebarData = await loadOfficialSidebarProfile();
}

const displayName = sidebarData.display_name || "user";
const bio = sidebarData.bio || "";
const bioTypewriterEnable = sidebarData.bio_typewriter_enable ?? true;
const bioTypewriterSpeed = Math.max(
	10,
	Math.min(500, Math.floor(Number(sidebarData.bio_typewriter_speed) || 80)),
);
const avatarUrl = sidebarData.avatar_url || profileConfig.avatar || "";
const profileLink = sidebarData.username ? url(`/${sidebarData.username}`) : url('/about');
const enabledLinks = (sidebarData.social_links || []).filter((link: SocialLink) => link.enabled);
---

<div
	class="card-base p-3"
	data-sidebar-profile-root
	data-sidebar-profile-uid={sidebarData.username || "__official__"}
	data-sidebar-profile-name={displayName}
	data-sidebar-profile-bio={bio}
	data-sidebar-profile-avatar={avatarUrl}
	data-sidebar-profile-link={profileLink}
>
    <a aria-label="Go to Profile Page" href={profileLink} data-sidebar-profile-link
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[12rem] lg:max-w-none overflow-hidden rounded-xl active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa7-regular:address-card"
                  class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-5xl">
            </Icon>
        </div>
        <div data-sidebar-profile-avatar class="mx-auto lg:w-full h-full lg:mt-0">
            <ImageWrapper src={avatarUrl} alt="Profile Image of the Author" class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
        </div>
    </a>
    <div class="px-2">
        <div data-sidebar-profile-name class="font-bold text-xl text-center mb-1 text-neutral-900 dark:text-neutral-50 transition">{displayName}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>

        <div data-sidebar-profile-bio class="text-center text-neutral-500 dark:text-neutral-400 mb-2.5 transition">
            {bioTypewriterEnable ? (
                <TypewriterText
                    text={bio}
                    speed={bioTypewriterSpeed}
                    class="inline-block"
                />
            ) : (
                bio
            )}
        </div>

        <div data-sidebar-profile-social class="flex flex-wrap gap-2 justify-center mb-1">
            {enabledLinks.length > 1 && enabledLinks.map((item: SocialLink) => {
                const meta = SOCIAL_PLATFORM_META[item.platform];
                const icon = meta?.icon || "material-symbols:link";
                const label = meta?.label || item.platform;
                return (
                    <a rel="me" aria-label={label} href={item.url} target="_blank"
                       class="btn-regular rounded-lg h-10 w-10 active:scale-90">
                        <Icon name={icon} class="text-[1.5rem]" />
                    </a>
                );
            })}
            {enabledLinks.length === 1 && (() => {
                const item = enabledLinks[0];
                const meta = SOCIAL_PLATFORM_META[item.platform];
                const icon = meta?.icon || "material-symbols:link";
                const label = meta?.label || item.platform;
                return (
                    <a rel="me" aria-label={label} href={item.url} target="_blank"
                       class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                        <Icon name={icon} class="text-[1.5rem]" />
                        {label}
                    </a>
                );
            })()}
        </div>

        {umamiEnabled && (
            <hr class="my-2 border-t border-dashed border-gray-300 dark:border-gray-700" />
            <div class="text-sm text-gray-500 dark:text-gray-400 mt-2 text-center">
                <Icon name="fa7-solid:eye" class="inline-block mr-1 text-gray-400 dark:text-gray-500 text-sm align-middle" />
                <span class="site-stats-display">{i18n(I18nKey.profileStatsLoading)}</span>
            </div>
        )}
    </div>
</div>

{umamiEnabled && (
    <script is:inline type="module" define:vars={{
        umamiBaseUrl,
        umamiApiKey,
        umamiWebsiteId,
        umamiEnabled,
        profileStatsPageViews: i18n(I18nKey.profileStatsPageViews),
        profileStatsVisits: i18n(I18nKey.profileStatsVisits),
        profileStatsUnavailable: i18n(I18nKey.profileStatsUnavailable)
    }}>
        // 客户端统计文案生成函数
        /**
         * @param {number} pageViews
         * @param {number} visits
         * @returns {string}
         */
        function generateStatsText(pageViews, visits) {
            return `${profileStatsPageViews} ${pageViews} · ${profileStatsVisits} ${visits}`;
        }

        // 获取访问量统计
        /** @returns {Promise<void>} */
        async function fetchSiteStats() {
            if (!umamiEnabled) {return;}
            if (typeof window.getUmamiWebsiteStats !== 'function') {return;}

            try {
                // 调用全局工具获取 Umami 统计数据
                const stats = await window.getUmamiWebsiteStats(umamiBaseUrl, umamiApiKey, umamiWebsiteId);

                // 从返回的数据中提取页面浏览量和访客数
                const pageViews = stats.pageviews ?? 0;
                const visits = stats.visits ?? 0;

                const displayElements = document.querySelectorAll('.site-stats-display');
                displayElements.forEach(element => {
                    element.textContent = generateStatsText(pageViews, visits);
                });
            } catch (error) {
                console.error('Error fetching site stats:', error);
                const displayElements = document.querySelectorAll('.site-stats-display');
                displayElements.forEach(element => {
                    element.textContent = profileStatsUnavailable;
                });
            }
        }

        if (document.readyState === 'loading') {
            // 页面加载完成后获取统计数据
            document.addEventListener('DOMContentLoaded', () => { void fetchSiteStats(); });
        } else {
            void fetchSiteStats();
        }
    </script>
)}
