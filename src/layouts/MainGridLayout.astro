<Layout title={title} banner={banner} description={description} lang={lang} setOGTypeArticle={setOGTypeArticle} postSlug={postSlug}>

<script type="module" is:inline define:vars={{navbarTransparentMode: siteConfig.banner?.navbar?.transparentMode || "semi", defaultWallpaperMode: configuredWallpaperMode, initialWallpaperMode, BANNER_HEIGHT: BANNER_HEIGHT, pageScaling: siteConfig.pageScaling}}>

	// 立即执行，在页面渲染前应用壁纸模式和布局模式，避免闪烁
	(function() {
		// 壁纸模式由配置控制，不再从 localStorage 读取
		const wallpaperMode = initialWallpaperMode;
		const body = document.body;
		
		// 定义 banner 高度常量（与 constants.ts 保持一致）
		// const BANNER_HEIGHT = 35;
		// const BANNER_HEIGHT_EXTEND = 30;
		// const BANNER_HEIGHT_HOME = BANNER_HEIGHT + BANNER_HEIGHT_EXTEND;
		// const MAIN_PANEL_OVERLAPS_BANNER_HEIGHT = 3.5;
		
		// 立即应用 body 类，确保首次渲染就是正确的状态
		switch(wallpaperMode) {
			case 'banner':
				body.classList.add('enable-banner');
				body.classList.remove('no-banner-mode');
				body.classList.remove('waves-paused');
				break;
			case 'none':
				body.classList.remove('enable-banner');
				body.classList.add('no-banner-mode');
				body.classList.add('waves-paused');
				break;
		}
	})();

	function getActiveWallpaperMode() {
		const swupContainer = document.getElementById("swup-container");
		const isArticle =
			swupContainer?.getAttribute("data-is-article") === "true";
		return isArticle ? "none" : defaultWallpaperMode;
	}
	
	// 根据壁纸模式动态设置 banner 的显示
	
	// 在 DOM 加载后执行
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', applyWallpaperMode);
	} else {
		applyWallpaperMode();
	}
	
	function applyWallpaperMode() {
		// 壁纸模式由配置控制，不再从 localStorage 读取
		var wallpaperMode = getActiveWallpaperMode();
		var bannerWrapper = document.getElementById('banner-wrapper');
		var navbar = document.getElementById('navbar');
		var body = document.body;
		var mainContent = document.querySelector('.absolute.w-full.z-30.pointer-events-none');
		var tocWrapper = document.getElementById('toc-wrapper');

		if (mainContent) {
			mainContent.classList.toggle(
				'no-banner-layout',
				wallpaperMode === 'none',
			);
		}
		
		if (bannerWrapper) {
			const shouldShowBanner = wallpaperMode === 'banner';
			const isHidden = bannerWrapper.classList.contains(
				'wallpaper-layer-hidden',
			);

			if (shouldShowBanner) {
				bannerWrapper.classList.remove('wallpaper-layer-hidden');
				bannerWrapper.removeAttribute('aria-hidden');
				bannerWrapper.removeAttribute('inert');
				bannerWrapper.style.removeProperty('height');
			} else {
				if (!isHidden) {
					const rect = bannerWrapper.getBoundingClientRect();
					if (rect.height > 0) {
						bannerWrapper.style.height = `${rect.height}px`;
					}
					bannerWrapper.addEventListener(
						'transitionend',
						(event) => {
							if (event.propertyName !== 'opacity') {
								return;
							}
							bannerWrapper.style.removeProperty('height');
						},
						{ once: true },
					);
				}
				bannerWrapper.classList.add('wallpaper-layer-hidden');
				bannerWrapper.setAttribute('aria-hidden', 'true');
				bannerWrapper.setAttribute('inert', '');
			}
		}

		body.classList.toggle('enable-banner', wallpaperMode === 'banner');
		body.classList.toggle('no-banner-mode', wallpaperMode !== 'banner');
		body.classList.toggle('waves-paused', wallpaperMode !== 'banner');

		switch(wallpaperMode) {
			case 'banner':
				// 恢复 TOC 在 banner 模式下的隐藏状态，让滚动逻辑接管
				if (tocWrapper) {
					const scrollTop = document.documentElement.scrollTop;
					const bannerHeight = window.innerHeight * (BANNER_HEIGHT / 100);
					if (scrollTop <= bannerHeight) {
						tocWrapper.classList.add('toc-hide');
					}
				}
				// navbar 恢复原始透明模式（从 config 读取）
				if (navbar) {
					navbar.removeAttribute('data-dynamic-transparent');
					// 恢复 config 中设置的 data-transparent-mode
					navbar.setAttribute('data-transparent-mode', navbarTransparentMode);
					// 如果是 semifull 模式，重新初始化滚动检测
					if (navbarTransparentMode === 'semifull' && window.initSemifullScrollDetection) {
						window.initSemifullScrollDetection();
					}
				}
				break;

			case 'none':
				// 在无壁纸模式下也始终显示 TOC
				if (tocWrapper) {
					tocWrapper.classList.remove('toc-hide');
				}
				// navbar 强制设置为不透明（忽略 config 配置）
				if (navbar) {
					navbar.setAttribute('data-dynamic-transparent', 'none');
					// 强制移除 config 中的 data-transparent-mode 影响
					navbar.removeAttribute('data-transparent-mode');
				}
				break;
		}

		if (window.__updateBannerCarouselState) {
			requestAnimationFrame(() => {
				window.__updateBannerCarouselState();
			});
		}
	}
	
	// 支持 Swup 页面过渡
	document.addEventListener('swup:page:view', function() {
		applyWallpaperMode();
	});
</script>

