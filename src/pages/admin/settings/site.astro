---
import AdminLayout from "@layouts/AdminLayout.astro";

export const prerender = false;
---

<AdminLayout title="站点设置" description="管理员配置站点运行时设置">
  <div
    data-enter-skeleton-page="admin-site-settings"
    data-enter-skeleton-target="admin-site-settings"
  >
    <div data-enter-skeleton-inline-content class="space-y-4 text-75">
      <section class="card-base px-9 py-6 rounded-(--radius-large)">
        <h1
          class="text-4xl font-bold text-black/90 dark:text-white/90 mb-2 relative
				before:w-1 before:h-8 before:rounded-md before:bg-(--primary)
				before:absolute before:top-1/2 before:-translate-y-1/2 before:-left-4"
        >
          站点设置
        </h1>
        <p class="text-base text-70">
          管理站点信息、导航栏、壁纸、首页与文章等配置
        </p>
      </section>

      <div id="ss-authenticated" class="space-y-4">
        <!-- ===== Section 1: 站点信息 ===== -->
        <section class="card-base p-8 rounded-(--radius-large) space-y-4">
          <h2 class="text-2xl font-semibold text-90">站点信息</h2>
          <form id="ss-site-form" class="grid grid-cols-1 grid-cols-2 gap-4">
            <label class="space-y-1.5">
              <span class="text-sm text-60">站点标题</span>
              <input
                id="ss-title"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="My Blog"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">站点副标题</span>
              <input
                id="ss-subtitle"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="A place for stories"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">站点关键词（用逗号分隔）</span>
              <input
                id="ss-keywords"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="blog, tech, life"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">建站日期</span>
              <input
                id="ss-start-date"
                type="date"
                onkeydown="return false"
                inputmode="none"
                class="date-picker-input w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">站点资料名称（Footer/License）</span
              >
              <input
                id="ss-profile-name"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="站点昵称"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">站点资料头像 URL / 文件 ID</span>
              <input
                id="ss-profile-avatar"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="/api/v1/public/assets/..."
              />
            </label>
            <hr class="border-(--line-divider) col-span-2" />
            <h3 class="text-lg font-medium text-75 col-span-2">站点图标</h3>
            <div class="col-span-2 space-y-2">
              <div class="flex flex-wrap items-center gap-2">
                <button
                  type="button"
                  id="ss-favicon-upload-btn"
                  class="px-4 h-9 rounded-lg text-sm font-medium cursor-pointer bg-(--primary) text-white hover:opacity-90 transition flex items-center gap-1.5"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"
                    ></path><polyline points="17 8 12 3 7 8"></polyline><line
                      x1="12"
                      y1="3"
                      x2="12"
                      y2="15"></line></svg
                  >上传图片</button
                >
                <button
                  type="button"
                  id="ss-favicon-add-btn"
                  class="px-3 h-9 rounded-lg text-sm font-medium cursor-pointer border border-(--line-divider) text-75 hover:border-(--primary) hover:text-(--primary) transition"
                  >新增条目</button
                >
                <span class="text-xs text-50">支持 PNG/JPG/ICO，最大 500KB</span
                >
              </div>
              <div id="ss-favicon-list" class="space-y-2"></div>
            </div>
            <hr class="border-(--line-divider) col-span-2" />
            <h3 class="text-lg font-medium text-75 col-span-2">
              统计（Umami）
            </h3>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-umami-enabled"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用 Umami
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">Umami Base URL</span>
              <input
                id="ss-umami-url"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="https://umami.example.com"
              />
            </label>
            <label class="space-y-1.5 col-span-2">
              <span class="text-sm text-60">Umami Scripts</span>
              <textarea
                id="ss-umami-scripts"
                class="w-full min-h-24 rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 font-mono text-xs placeholder:text-50"
                placeholder="<script ...></script>"></textarea>
            </label>
            <hr class="border-(--line-divider) col-span-2" />
            <h3 class="text-lg font-medium text-75 col-span-2">
              统计（GTM / Clarity）
            </h3>
            <label class="space-y-1.5">
              <span class="text-sm text-60">Google Tag Manager ID</span>
              <input
                id="ss-gtm-id"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="GTM-XXXXXXX"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">Microsoft Clarity ID</span>
              <input
                id="ss-clarity-id"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="abcd1234ef"
              />
            </label>
            <p class="col-span-2 text-xs text-50">留空表示禁用对应统计脚本。</p>
            <div class="col-span-2 flex items-center gap-2 pt-2">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-(--btn-regular-bg) text-(--btn-content) text-sm"
                >保存站点信息</button
              >
              <span id="ss-site-msg" class="text-sm text-60"></span>
            </div>
          </form>
        </section>

        <!-- ===== Section 2: 导航栏 ===== -->
        <section class="card-base p-8 rounded-(--radius-large) space-y-4">
          <h2 class="text-2xl font-semibold text-90">导航栏</h2>
          <form id="ss-nav-form" class="grid grid-cols-1 grid-cols-2 gap-4">
            <label class="space-y-1.5">
              <span class="text-sm text-60">导航模式</span>
              <select
                id="ss-navbar-mode"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              >
                <option value="logo">Logo</option>
                <option value="text-icon">文字+图标</option>
              </select>
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">导航标题文本</span>
              <input
                id="ss-navbar-text"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="Site Title"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">导航图标 URL / 文件 ID</span>
              <input
                id="ss-navbar-icon"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="/api/v1/public/assets/..."
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">导航 Logo URL / 文件 ID</span>
              <input
                id="ss-navbar-logo"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="/api/v1/public/assets/..."
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">横幅模式下导航透明度</span>
              <select
                id="ss-navbar-transparent-mode"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              >
                <option value="semi">semi</option>
                <option value="full">full</option>
                <option value="semifull">semifull</option>
              </select>
            </label>
            <div class="col-span-2 space-y-1.5">
              <span class="text-sm text-60">导航链接</span>
              <div id="ss-nav-links-list" class="space-y-2"></div>
            </div>
            <div class="col-span-2 flex items-center gap-2 pt-2">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-(--btn-regular-bg) text-(--btn-content) text-sm"
                >保存导航设置</button
              >
              <span id="ss-nav-msg" class="text-sm text-60"></span>
            </div>
          </form>
        </section>

        <!-- ===== Section 3: 首页设置 ===== -->
        <section class="card-base p-8 rounded-(--radius-large) space-y-4">
          <h2 class="text-2xl font-semibold text-90">首页设置</h2>
          <form id="ss-home-form" class="grid grid-cols-1 grid-cols-2 gap-4">
            <h3 class="text-lg font-medium text-75 col-span-2">轮播壁纸</h3>
            <label class="space-y-1.5">
              <span class="text-sm text-60">壁纸模式</span>
              <select
                id="ss-wallpaper-mode"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              >
                <option value="banner">banner</option>
                <option value="none">none</option>
              </select>
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">Banner 图片对齐</span>
              <select
                id="ss-banner-position"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              >
                <option value="top">top</option>
                <option value="center">center</option>
                <option value="bottom">bottom</option>
              </select>
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-banner-carousel-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用壁纸轮播
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">轮播间隔（秒）</span>
              <input
                id="ss-banner-carousel-interval"
                type="number"
                min="1"
                max="120"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
                placeholder="5"
              />
            </label>
            <hr class="border-(--line-divider) col-span-2" />
            <h3 class="text-lg font-medium text-75 col-span-2">
              图片源与首页文案
            </h3>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-banner-image-api-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用 Banner 图片 API
            </label>
            <label class="space-y-1.5 col-span-2">
              <span class="text-sm text-60">Banner 图片 API URL</span>
              <input
                id="ss-banner-image-api-url"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="https://example.com/api/banner"
              />
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-banner-home-text-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              首页显示 Banner 文案
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">首页文案主标题</span>
              <input
                id="ss-banner-home-text-title"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="我的小屋"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">首页文案副标题（每行一条）</span>
              <textarea
                id="ss-banner-home-text-subtitle"
                class="w-full min-h-24 rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="第一行
第二行"></textarea>
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-banner-home-typewriter-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用首页副标题打字机效果
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">打字速度（毫秒）</span>
              <input
                id="ss-banner-home-typewriter-speed"
                type="number"
                min="10"
                max="500"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">删除速度（毫秒）</span>
              <input
                id="ss-banner-home-typewriter-delete-speed"
                type="number"
                min="10"
                max="500"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">停顿时间（毫秒）</span>
              <input
                id="ss-banner-home-typewriter-pause-time"
                type="number"
                min="100"
                max="10000"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none"
            >
              <input
                type="checkbox"
                id="ss-banner-waves-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用水波纹效果
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none"
            >
              <input
                type="checkbox"
                id="ss-banner-waves-performance"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              水波纹性能模式
            </label>
            <div class="col-span-2 space-y-2">
              <h4 class="text-base font-medium text-75">桌面端壁纸</h4>
              <div class="flex flex-wrap items-center gap-2">
                <button
                  type="button"
                  id="ss-banner-desktop-upload-btn"
                  class="px-4 h-9 rounded-lg text-sm font-medium cursor-pointer bg-(--primary) text-white hover:opacity-90 transition flex items-center gap-1.5"
                  ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"
                    ></path><polyline points="17 8 12 3 7 8"></polyline><line
                      x1="12"
                      y1="3"
                      x2="12"
                      y2="15"></line></svg
                  >上传图片</button
                >
                <span class="text-xs text-50">拖拽调整顺序</span>
              </div>
              <div id="ss-banner-desktop-list" class="space-y-2"></div>
            </div>
            <div class="col-span-2 flex items-center gap-2 pt-2">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-(--btn-regular-bg) text-(--btn-content) text-sm"
                >保存首页设置</button
              >
              <span id="ss-home-msg" class="text-sm text-60"></span>
            </div>
          </form>
        </section>

        <!-- ===== Section 4: 文章设置 ===== -->
        <section class="card-base p-8 rounded-(--radius-large) space-y-4">
          <h2 class="text-2xl font-semibold text-90">文章设置</h2>
          <form
            id="ss-feature-form"
            class="grid grid-cols-1 grid-cols-2 gap-4 text-base"
          >
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none"
            >
              <input
                type="checkbox"
                id="ss-toc-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用文章目录
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none"
            >
              <input type="checkbox" id="ss-toc-jp" class="toggle-checkbox" />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              目录使用日文序号
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">目录模式</span>
              <select
                id="ss-toc-mode"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              >
                <option value="sidebar">sidebar</option>
                <option value="float">float</option>
              </select>
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">目录深度</span>
              <select
                id="ss-toc-depth"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              >
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
              </select>
            </label>
            <hr class="border-(--line-divider) col-span-2" />
            <h3 class="text-lg font-medium text-75 col-span-2">文章版权信息</h3>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-license-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用版权声明区块
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">版权名称</span>
              <input
                id="ss-license-name"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="CC BY-NC-SA 4.0"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">版权链接</span>
              <input
                id="ss-license-url"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="https://creativecommons.org/licenses/by-nc-sa/4.0/"
              />
            </label>
            <div class="col-span-2 flex items-center gap-2 pt-2">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-(--btn-regular-bg) text-(--btn-content) text-sm"
                >保存文章设置</button
              >
              <span id="ss-feature-msg" class="text-sm text-60"></span>
            </div>
          </form>
        </section>

        <!-- ===== Section 5: 公告 ===== -->
        <section class="card-base p-8 rounded-(--radius-large) space-y-4">
          <h2 class="text-2xl font-semibold text-90">公告</h2>
          <form
            id="ss-announce-form"
            class="grid grid-cols-1 grid-cols-2 gap-4"
          >
            <h3 class="text-lg font-medium text-75 col-span-2">公告</h3>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-ann-closable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              公告可关闭
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">公告标题</span>
              <input
                id="ss-ann-title"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="Welcome!"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">公告内容</span>
              <textarea
                id="ss-ann-content"
                class="w-full min-h-24 rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="公告正文..."></textarea>
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-ann-link-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用公告链接
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">公告链接文本</span>
              <input
                id="ss-ann-link-text"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="了解更多"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">公告链接 URL</span>
              <input
                id="ss-ann-link-url"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="https://..."
              />
            </label>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-ann-link-external"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              公告链接使用新窗口打开
            </label>
            <div class="col-span-2 flex items-center gap-2 pt-2">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-(--btn-regular-bg) text-(--btn-content) text-sm"
                >保存公告</button
              >
              <span id="ss-announce-msg" class="text-sm text-60"></span>
            </div>
          </form>
        </section>

        <!-- ===== Section 6: 其它设置 ===== -->
        <section class="card-base p-8 rounded-(--radius-large) space-y-4">
          <h2 class="text-2xl font-semibold text-90">其它设置</h2>
          <form id="ss-other-form" class="grid grid-cols-1 grid-cols-2 gap-4">
            <h3 class="text-lg font-medium text-75 col-span-2">音乐播放器</h3>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-music-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用音乐播放器
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">模式</span>
              <select
                id="ss-music-mode"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              >
                <option value="meting">meting</option>
                <option value="local">local</option>
              </select>
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">Meting API</span>
              <input
                id="ss-music-api"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="https://api.injahow.cn/meting/"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">歌单 ID</span>
              <input
                id="ss-music-id"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">服务器</span>
              <input
                id="ss-music-server"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="netease"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">类型</span>
              <input
                id="ss-music-type"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 placeholder:text-50"
                placeholder="playlist"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">歌曲名滚动速度</span>
              <input
                id="ss-music-marquee"
                type="number"
                min="0"
                max="200"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
                placeholder="30"
              />
            </label>
            <hr class="border-(--line-divider) col-span-2" />
            <h3 class="text-lg font-medium text-75 col-span-2">
              页脚与侧栏布局
            </h3>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none col-span-2"
            >
              <input
                type="checkbox"
                id="ss-footer-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用 Footer 自定义 HTML
            </label>
            <label class="space-y-1.5 col-span-2">
              <span class="text-sm text-60">Footer 自定义 HTML</span>
              <textarea
                id="ss-footer-html"
                class="w-full min-h-24 rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 font-mono text-xs placeholder:text-50"
                placeholder="<span>备案信息</span>"></textarea>
            </label>
            <label class="space-y-1.5 col-span-2">
              <span class="text-sm text-60"
                >侧边栏布局 JSON（sidebarLayout.*）</span
              >
              <textarea
                id="ss-sidebar-layout-json"
                class="w-full min-h-52 rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75 font-mono text-xs placeholder:text-50"
                placeholder='{"properties":[],"components":{"left":[],"right":[]},"defaultAnimation":{"enable":true,"baseDelay":0,"increment":50}}'
              ></textarea>
            </label>
            <hr class="border-(--line-divider) col-span-2" />
            <h3 class="text-lg font-medium text-75 col-span-2">樱花特效</h3>
            <label
              class="flex items-center gap-3 text-75 cursor-pointer select-none"
            >
              <input
                type="checkbox"
                id="ss-sakura-enable"
                class="toggle-checkbox"
              />
              <span class="toggle-track"><span class="toggle-knob"></span></span
              >
              启用全屏樱花特效
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">樱花数量</span>
              <input
                id="ss-sakura-num"
                type="number"
                min="1"
                max="240"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">越界重置次数（-1 无限）</span>
              <input
                id="ss-sakura-limit-times"
                type="number"
                min="-1"
                max="1000"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">尺寸最小值</span>
              <input
                id="ss-sakura-size-min"
                type="number"
                step="0.01"
                min="0.1"
                max="8"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">尺寸最大值</span>
              <input
                id="ss-sakura-size-max"
                type="number"
                step="0.01"
                min="0.1"
                max="8"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">透明度最小值</span>
              <input
                id="ss-sakura-opacity-min"
                type="number"
                step="0.01"
                min="0"
                max="1"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">透明度最大值</span>
              <input
                id="ss-sakura-opacity-max"
                type="number"
                step="0.01"
                min="0"
                max="1"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">水平速度最小值</span>
              <input
                id="ss-sakura-speed-h-min"
                type="number"
                step="0.01"
                min="-20"
                max="20"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">水平速度最大值</span>
              <input
                id="ss-sakura-speed-h-max"
                type="number"
                step="0.01"
                min="-20"
                max="20"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">垂直速度最小值</span>
              <input
                id="ss-sakura-speed-v-min"
                type="number"
                step="0.01"
                min="-20"
                max="20"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">垂直速度最大值</span>
              <input
                id="ss-sakura-speed-v-max"
                type="number"
                step="0.01"
                min="-20"
                max="20"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">旋转速度</span>
              <input
                id="ss-sakura-speed-rotation"
                type="number"
                step="0.01"
                min="-5"
                max="5"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">消失速度</span>
              <input
                id="ss-sakura-speed-fade"
                type="number"
                step="0.01"
                min="0"
                max="5"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <label class="space-y-1.5">
              <span class="text-sm text-60">Canvas z-index</span>
              <input
                id="ss-sakura-z-index"
                type="number"
                min="0"
                max="9999"
                class="w-full rounded-lg border border-(--line-divider) px-3.5 py-2.5 bg-transparent text-75"
              />
            </label>
            <div class="col-span-2 flex items-center gap-2 pt-2">
              <button
                type="submit"
                class="px-4 py-2 rounded-lg bg-(--btn-regular-bg) text-(--btn-content) text-sm"
                >保存其它设置</button
              >
              <span id="ss-other-msg" class="text-sm text-60"></span>
            </div>
          </form>
        </section>
      </div>
    </div>
    <div
      data-enter-skeleton-inline-placeholder
      aria-hidden="true"
      class="space-y-4"
    >
      <section class="card-base px-9 py-6 rounded-(--radius-large) space-y-3">
        <div
          class="md3-skeleton-text"
          style="--skeleton-width: 30%; --skeleton-height: 2rem;"
        >
        </div>
        <div class="md3-skeleton-text" style="--skeleton-width: 56%;"></div>
      </section>
      {
        Array.from({ length: 6 }).map((_, index) => (
          <section class="card-base p-8 rounded-(--radius-large) space-y-4">
            <div
              class="md3-skeleton-text"
              style="--skeleton-width: 22%; --skeleton-height: 1.6rem;"
            />
            <div class="grid grid-cols-1 grid-cols-2 gap-4">
              {Array.from({ length: index === 0 ? 6 : 4 }).map(() => (
                <div class="md3-skeleton-block h-10 rounded-lg" />
              ))}
              <div class="md3-skeleton-block h-24 rounded-lg col-span-2" />
            </div>
            <div class="flex items-center gap-2 pt-2">
              <div class="md3-skeleton-block h-10 w-28 rounded-lg" />
              <div class="md3-skeleton-text w-24" />
            </div>
          </section>
        ))
      }
    </div>
  </div>

  <div
    slot="modal"
    id="ss-image-crop-modal"
    class="fixed inset-0 z-9999 hidden items-center justify-center bg-black/70 px-4 py-5"
    tabindex="-1"
  >
    <div
      id="ss-image-crop-panel"
      class="card-base w-full max-w-2xl max-h-[92vh] overflow-y-auto rounded-(--radius-large) border border-(--line-divider) p-5 p-6 space-y-4 text-75"
    >
      <div class="flex items-center gap-2">
        <h3
          id="ss-image-crop-title"
          class="text-lg text-xl font-semibold text-90"
        >
          裁剪图片
        </h3>
      </div>
      <p id="ss-image-crop-help" class="text-sm text-60">
        选择图片后，可拖拽调整位置并通过滑块缩放。
      </p>
      <div
        id="ss-image-crop-viewport"
        class="relative mx-auto w-full max-w-[640px] overflow-hidden rounded-2xl border border-(--line-divider) bg-black/15 dark:bg-white/10 select-none touch-none"
        style="aspect-ratio: 16 / 9;"
      >
        <img
          id="ss-image-crop-image"
          class="absolute left-0 top-0 max-w-none pointer-events-none hidden"
          alt="待裁剪图片"
        />
        <div
          id="ss-image-crop-empty"
          class="absolute inset-0 grid place-items-center text-sm text-60 pointer-events-none"
        >
          请选择图片
        </div>
        <div
          class="absolute inset-0 pointer-events-none rounded-2xl ring-2 ring-white/80"
        >
        </div>
      </div>
      <div class="space-y-1">
        <label for="ss-image-crop-zoom" class="text-sm text-60">缩放</label>
        <input
          id="ss-image-crop-zoom"
          type="range"
          min="100"
          max="300"
          step="1"
          value="100"
          class="w-full"
        />
      </div>
      <div class="flex flex-wrap items-center gap-3">
        <input
          id="ss-image-crop-file"
          type="file"
          accept="image/*"
          class="hidden"
        />
        <button
          type="button"
          id="ss-image-crop-select-btn"
          class="px-4 h-9 rounded-lg text-sm font-medium cursor-pointer bg-(--primary) text-white hover:opacity-90 transition flex items-center gap-1.5"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 h-4"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"></path><polyline
              points="17 8 12 3 7 8"></polyline><line
              x1="12"
              y1="3"
              x2="12"
              y2="15"></line></svg
          >选择文件</button
        >
        <button
          type="button"
          id="ss-image-crop-apply-btn"
          class="px-4 py-2.5 rounded-lg bg-(--btn-regular-bg) text-(--btn-content) text-sm"
        >
          确认裁剪
        </button>
        <button
          type="button"
          id="ss-image-crop-cancel-btn"
          class="ml-auto px-4 py-2.5 rounded-lg border border-(--line-divider) text-sm text-75"
        >
          取消
        </button>
      </div>
      <span id="ss-image-crop-msg" class="text-sm text-red-500"></span>
    </div>
  </div>
</AdminLayout>
